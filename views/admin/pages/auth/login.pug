extends ../../layouts/auth.pug
include ../../mixins/alert.pug

block main
    +alert-error(3000)
    .container.my-5
        .row.justify-content-center
            .col-8
                h1(class="text-center") Đăng nhập
                form(
                    action=`/${prefixAdmin}/auth/login`, 
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email
                        input#email.form-control(type="email", name="email", required)

                    div(class="form-group")
                        label(for="password") Mật khẩu
                        input#password.form-control(type="password", name="password", required)

                    div(class="form-group")
                        button(
                            type="submit" 
                            class="btn btn-primary btn-block"
                        ) Đăng nhập

