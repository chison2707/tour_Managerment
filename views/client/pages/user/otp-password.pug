extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(3000)
    +alert-error(3000) 
    .login-container
        h2 Đăng Nhập
        form(
            action="/users/password/otp"
            method="POST"
        )
            .form-group.mt-2
                label(for="email") Email:
                input(
                    div="email"
                    name="email"
                    class="form-control"
                    placeholder="Nhập email của bạn" 
                    type="email" 
                    required
                    value=email 
                    readonly
                    )
            .form-group.mt-2
                label(for="otp") Mã OTP:
                input(
                    div="otp"
                    name="otp"
                    id="otp"
                    class="form-control"
                    type="text"
                    placeholder="Nhập mã otp"
                    required
                    )
            button.btn.btn-info.w-100.mt-2(type="submit") Xác nhận