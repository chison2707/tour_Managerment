extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(3000)
    +alert-error(3000) 
    .login-container
        h2 Quên mật khẩu
        form(
            action="/users/password/forgot"
            method="POST"
        )
            .form-group.mt-2
                label(for="email") Email:
                input(
                    div="email"
                    name="email"
                    class="form-control"
                    type="email" 
                    placeholder="Nhập email của bạn" 
                    required
                    )
            button.btn.btn-info.w-100.mt-2(type="submit") Gửi mail xác nhận