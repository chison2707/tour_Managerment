extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head(pageTitle)

        .row
            each item in tours
                .col-4.mb-3
                    div(class="card" style="width: 18rem;")
                        img(src=item.image)
                        div(class="card-body")
                            h5(class="card-title") #{item.title}
                            b(class="mb-2" style="margin-right: .5rem;") #{item.price_special.toLocaleString()}₫
                            del(class="mb-2") #{item.price.toLocaleString()}₫
                            p(class="font-weight-bold") Giảm #{item.discount}%
                            a(href=`/tours/detail/${item.slug}` class="btn btn-primary") Xem chi tiết