extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/moment.pug

block main
  +alert-success(3000)
  +alert-error(3000)
  h1(class="mb-4") #{pageTitle}

  form(
      action=`/${prefixAdmin}/vouchers/edit/${voucher.id}?_method=PATCH`
      method="POST"
    )
      div(class="form-group")
        label(for="code") Mã voucher
        input(
          type="text"
          class="form-control"
          id="code"
          name="code"
          value=voucher.code
          required
        )
      div(class="form-group")
        label(for="quantity") Số lượng
        input(
          type="number"
          class="form-control"
          id="quantity"
          name="quantity"
          value=voucher.quantity
          min="0"
        )
      div(class="form-group")
        label(for="discount") % Giảm giá
        input(
          type="number"
          class="form-control"
          id="discount"
          name="discount"
          value=voucher.discount
          min="0"
        )
      div(class="form-group")
        label(for="expiredAt") Hạn sử dụng
        input(
          type="datetime-local"
          class="form-control"
          id="expiredAt"
          name="expiredAt"
          value= moment(voucher.expiredAt).format('YYYY-MM-DDTHH:mm')
          min="0"
        )
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Cập nhật