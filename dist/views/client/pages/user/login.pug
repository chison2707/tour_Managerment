extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(3000)
    +alert-error(3000) 
    .login-container
        h2 Đăng Nhập
        form(
            action="/users/login"
            method="POST"
        )
            .form-group.mt-2
                label(for="email") Email:
                input(
                    div="email"
                    name="email"
                    class="form-control"
                    type="email" 
                    placeholder="Nhập email của bạn" 
                    required
                    )
            .form-group.mt-2
                label(for="password") Mật khẩu:
                input(
                    div="password"
                    name="password"
                    class="form-control"
                    type="password"
                    placeholder="Nhập mật khẩu"
                    required
                    )
            button.btn.btn-info.w-100.mt-2(type="submit") Đăng Nhập
            .text-center.mt-3
            a(href="/users/password/forgot") Quên mật khẩu?