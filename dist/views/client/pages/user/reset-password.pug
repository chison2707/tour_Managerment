extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(3000)
    +alert-error(3000) 
    .login-container
        h2 Đăng Nhập
        form(
            action="/users/password/reset"
            method="POST"
        )
            .form-group.mt-2
                label(for="password") Mật khẩu mới:
                input(
                    div="password"
                    name="password"
                    class="form-control"
                    type="password" 
                    placeholder="Nhập mật khẩu mới" 
                    required
                    )
            .form-group.mt-2
                label(for="confirmPassword") Xác nhận mật khẩu:
                input(
                    div="confirmPassword"
                    name="confirmPassword"
                    class="form-control"
                    type="password"
                    placeholder="Xác nhận mật khẩu"
                    required
                    )
            button.btn.btn-info.w-100.mt-2(type="submit") Xác nhận