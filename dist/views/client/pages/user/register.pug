extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(3000)
    +alert-error(3000)
    .register-container
        h2 Đăng Ký
        form(
            action="/users/register"
            method="POST"
        )
            .form-group.mt-2
                label(for="fullname") Họ và tên:
                input(
                    id="fullname"
                    name="fullname"
                    class="form-control"
                    type="text" 
                    placeholder="Nhập họ và tên của bạn" 
                    required
                    )
            .form-group.mt-2
                label(for="email") Email:
                input(
                    id="email"
                    name="email"
                    class="form-control"
                    type="email" 
                    placeholder="Nhập email của bạn" 
                    required
                    )
            .form-group.mt-2
                label(for="password") Mật khẩu:
                input(
                    id="password"
                    name="password"
                    class="form-control"
                    type="password" 
                    placeholder="Nhập mật khẩu" 
                    required
                    )
            .form-group.mt-2
                label(for="confirmPassword") Xác nhận mật khẩu:
                input(
                    id="confirmPassword"
                    name="confirmPassword"
                    class="form-control"
                    type="password" 
                    placeholder="Nhập lại mật khẩu" 
                    required
                    )
            button.btn.btn-info.w-100.mt-3(type="submit") Đăng Ký
            .text-center.mt-3
            a(href="/users/login") Đã có tài khoản? Đăng nhập  